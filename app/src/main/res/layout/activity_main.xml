<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:gravity="top"
    android:tileMode="disabled"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/coffee4"
        tools:ignore="ScrollViewSize">

        <ImageView
            android:id="@+id/imageView_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:elevation="0dp"
            android:maxWidth="400dp"
            android:maxHeight="10000px"
            android:src="@drawable/oppiekoffielogo"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textview_main_head"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_below="@id/imageView_logo"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/work_sans_light"
            android:text="Start Your Day Right."
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/white"
            android:textFontWeight="@integer/material_motion_duration_long_1"
            android:textSize="24dp" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_main_head"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="316dp"
            android:layout_marginRight="90dp"
            android:background="@drawable/transparent_bg_bordered_button"
            android:text="Login"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_register"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_login"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="90dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/transparent_bg_bordered_button"
            android:text="Register"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_google_signin"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="710dp"
            android:layout_marginRight="140dp"
            android:background="@drawable/common_google_signin_btn_text_disabled"
            android:paddingLeft="35dp"
            android:text="Sign in"
            android:textColor="@color/black"
            android:visibility="visible" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="230dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/round_border"
            android:backgroundTint="#30ffffff"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="6dp"
            android:hint="Email address"
            android:paddingLeft="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="290dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/round_border"
            android:backgroundTint="#30ffffff"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawablePadding="6dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="10dp"
            android:visibility="gone"
            tools:ignore="InvalidId" />


    </RelativeLayout>

</FrameLayout>